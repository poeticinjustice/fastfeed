<!DOCTYPE html>
<html>

<head>
  <% include ./partials/head %>
</head>

<body>
  <header id="header" class="none">
    <h1>Hello News World</h1>
  </header><!-- /header -->

  <div id="left_column">
    <div id="description">
      <h3>News Feed</h3>
    </div>
    <div id="newsChoose">
      <p>categories still need to be created</p>
      <select name="newsCategory">
        <% categories.forEach(category => { %>
          <option value="<%= category %>"><%= category %></option>
        <% }); %>
      </select>
      <button id="newsCategory" type="submit">Choose</button> <br><br>

      <select name="newsSource" id="newsSourceDrop">
        <% sources.forEach(source => { %>
          <option value="<%= source %>"><%= source %></option>
        <% }); %>
      </select>
      <button id="newsSource" type="submit">Select</button> <br><br>
    </div>
  </div>

  <div id="newsapi_column">
    <ul>
      <!-- News API Content-->
      Click on the button above to the left to replace me me with news!
    </ul>
  </div>

  <div id="snews_column">
    <ul>
      <h3>Saved Stories</h3>

    </ul>
  </div>
</body>
</html>
